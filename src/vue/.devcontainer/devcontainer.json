{
  "name": "Vue Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:lts-bookworm-slim",

  // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  // ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    3000
  ],

  // ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "npm install -g @devcontainers/cli",

  // ðŸ‘‡ Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        // Essential
        "aaron-bond.better-comments",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "johnsoncodehk.vscode-tsconfig-helper",
        "ms-azuretools.vscode-docker",
        "usernamehw.errorlens",
        "naumovs.color-highlight",
        "GitHub.vscode-pull-request-github",
        "antfu.iconify",
        
        // Stack
        "antfu.unocss",
        "antfu.vite",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "lokalise.i18n-ally",
        
        // Extras
        "antfu.browse-lite",
        "antfu.slidev",
        "streetsidesoftware.code-spell-checker",
        "antfu.open-in-github-button",
        "antfu.where-am-i",
        "antfu.file-nesting"
      ],
      "settings": {
        
        // ========== Lint & Format ==========
        "editor.formatOnSave": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.eol": "\n",
        "files.insertFinalNewline": true,

        // ========== Extension configs ==========
        "cSpell.enabled": false,
        "eslint.codeAction.showDocumentation": {
          "enable": true
        },
        "eslint.experimental.useFlatConfig": true,
        "eslint.quiet": true,
        // Silent the stylistic rules in you IDE, but still auto fix them
        "eslint.rules.customizations": [
          {
            "rule": "style/*",
            "severity": "off"
          },
          {
            "rule": "format/*",
            "severity": "off"
          },
          {
            "rule": "*-indent",
            "severity": "off"
          },
          {
            "rule": "*-spacing",
            "severity": "off"
          },
          {
            "rule": "*-spaces",
            "severity": "off"
          },
          {
            "rule": "*-order",
            "severity": "off"
          },
          {
            "rule": "*-dangle",
            "severity": "off"
          },
          {
            "rule": "*-newline",
            "severity": "off"
          },
          {
            "rule": "*quotes",
            "severity": "off"
          },
          {
            "rule": "*semi",
            "severity": "off"
          }
        ],
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue",
          "html",
          "markdown",
          "json",
          "jsonc",
          "yaml",
          "toml"
        ],
        "i18n-ally.autoDetection": false,
        "i18n-ally.displayLanguage": "en",
        "prettier.enable": false,
        "prettier.printWidth": 200,
        "prettier.semi": false,
        "prettier.singleQuote": true
      }
    }
  },

  // ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "node"
}
